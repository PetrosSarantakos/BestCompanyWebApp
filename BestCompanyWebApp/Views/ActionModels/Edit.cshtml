@model BestCompanyWebApp.Models.ActionModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ActionModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActionId" />
            <div class="form-group">
                <label asp-for="ActionType" class="control-label">Action Type</label>
                <input asp-for="ActionType" class="form-control" />
                <span asp-validation-for="ActionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionDate" class="control-label">Action Date</label>
                <input asp-for="ActionDate" class="form-control" />
                <span asp-validation-for="ActionDate" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Delete", "Delete", "ActionModels",new {id=Model.ActionId} ,new { @class = "btn btn-danger" })
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
